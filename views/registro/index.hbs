<section class="registro pestaña">
    <p class="titulos">Registro</p>

    <form class="registro__form" action="/registro" method="POST">

        <div class="registro__form__caja">
            <div class="registro__form__inputs">
                <label for="name">Nombre</label>
                <input type="text" class="__inputs__campo" name="name" id="name" placeholder="Animate">
            </div>
            <div class="registro__form__inputs">
                <label for="lastName">Apellido</label>
                <input type="text" class="__inputs__campo" name="lastName" id="lastName" placeholder="Digital">
            </div>
            <div class="registro__form__inputs">
                <label for="email">Email</label>
                <input type="email" class="__inputs__campo" name="email" id="email" placeholder="animatedigital@gmail.com">
            </div>
            <div class="registro__form__inputs">
                <label for="job">Empresa</label>
                <input type="text" class="__inputs__campo" name="job" id="job" placeholder="Animate">
            </div>
            <div class="registro__form__inputs">
                <label for="password">Contraseña</label>
                <input type="text" class="__inputs__campo" name="password" id="password">
            </div>
            <div class="registro__form__inputs">
                <label for="validatePassword">Confirmar Contraseña</label>
                <input type="text" class="__inputs__campo" name="validatePassword" id="validatePassword">
            </div>
        </div>
        <button type="submit" class="botones">¡ Registrarme !</button>
    </form>

</section>